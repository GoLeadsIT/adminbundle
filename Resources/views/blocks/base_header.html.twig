<section class="content-header">
    <div class="row">
        <div class="col-xs-9">
            {% if headerTitle is defined %}
                <h1>
                    {{ headerTitle }}
                    <small>{{ headerSubtitle is defined ? headerSubtitle }}</small>
                </h1>
            {% endif %}
        </div>
        <div class="col-xs-3">
            {% if headerButton is defined %}
                <a href="{{ path(headerButton.path) }}" class="btn btn-app pull-right">
                    <i class="fa {{ headerButton.icon }}"></i> {{ headerButton.text }}
                </a>
            {% endif %}
        </div>
    </div>
</section>
