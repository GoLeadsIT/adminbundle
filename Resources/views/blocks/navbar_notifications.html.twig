<li class="dropdown notifications-menu">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-bell-o"></i>
    <span class="label label-warning">{{ notifications | length }}</span>
  </a>
  <ul class="dropdown-menu">
    <li class="header">Tienes {{ notifications | length }} notificacion/es</li>
    <li>
      <ul class="menu">
        {% for notification in notifications %}
          <li>
            <a href="#">
              <i class="fa {{ notification.icon }}" style="color: {{ notification.color }};"></i> {{ notification.message }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </li>
  </ul>
</li>
